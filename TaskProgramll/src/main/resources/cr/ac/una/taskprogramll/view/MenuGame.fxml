<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="rootPane" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.taskprogramll.controller.MenuGameController">

    <!-- Contenedor principal del mapa -->
    <VBox fx:id="mapContainer" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        
        <!-- Primera fila del mapa -->
        <HBox fx:id="row1" maxHeight="Infinity" minHeight="200.0" VBox.vgrow="ALWAYS">
            
            <!-- Edificio Registro -->
            <VBox fx:id="registro" alignment="CENTER" maxWidth="200.0" minWidth="150.0" HBox.hgrow="SOMETIMES">
                <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Registro" />
                <Rectangle fx:id="registroHitbox" fill="TRANSPARENT" height="120.0" layoutX="15.0" layoutY="40.0" stroke="RED" strokeType="INSIDE" strokeWidth="2.0" width="120.0" />
            </VBox>
            
            <!-- Espacio caminable -->
            <Pane fx:id="path1" style="-fx-background-color: #a5d6a7;" HBox.hgrow="ALWAYS" />
            
            <!-- Árbol -->
            <VBox fx:id="arbol1" alignment="CENTER" maxWidth="200.0" minWidth="150.0" HBox.hgrow="SOMETIMES">
                <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Árbol" />
                <Circle fx:id="arbolHitbox1" fill="TRANSPARENT" layoutX="75.0" layoutY="100.0" radius="50.0" stroke="RED" strokeType="INSIDE" strokeWidth="2.0" />
            </VBox>
        </HBox>
        
        <!-- Segunda fila del mapa (camino principal) -->
        <HBox fx:id="row2" maxHeight="Infinity" minHeight="200.0" VBox.vgrow="ALWAYS">
            
            <!-- Mantenimiento -->
            <VBox fx:id="mantenimiento" alignment="CENTER" maxWidth="200.0" minWidth="150.0" HBox.hgrow="SOMETIMES">
                <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Mantenimiento" />
                <Rectangle fx:id="mantenimientoHitbox" fill="TRANSPARENT" height="120.0" layoutX="15.0" layoutY="40.0" stroke="RED" strokeType="INSIDE" strokeWidth="2.0" width="120.0" />
            </VBox>
            
            <!-- Área central caminable -->
            <Pane fx:id="mainPath" style="-fx-background-color: #c8e6c9;" HBox.hgrow="ALWAYS" />
            
            <!-- Torneos -->
            <VBox fx:id="torneos" alignment="CENTER" maxWidth="200.0" minWidth="150.0" HBox.hgrow="SOMETIMES">
                <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Torneos" />
                <Rectangle fx:id="torneosHitbox" fill="TRANSPARENT" height="120.0" layoutX="15.0" layoutY="40.0" stroke="RED" strokeType="INSIDE" strokeWidth="2.0" width="120.0" />
            </VBox>
        </HBox>
        
        <!-- Tercera fila del mapa -->
        <HBox fx:id="row3" maxHeight="Infinity" minHeight="200.0" VBox.vgrow="ALWAYS">
            
            <!-- Biblioteca -->
            <VBox fx:id="biblioteca" alignment="CENTER" maxWidth="200.0" minWidth="150.0" HBox.hgrow="SOMETIMES">
                <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Biblioteca" />
                <Rectangle fx:id="bibliotecaHitbox" fill="TRANSPARENT" height="120.0" layoutX="15.0" layoutY="40.0" stroke="RED" strokeType="INSIDE" strokeWidth="2.0" width="120.0" />
            </VBox>
            
            <!-- Espacio caminable -->
            <Pane fx:id="path2" style="-fx-background-color: #a5d6a7;" HBox.hgrow="ALWAYS" />
            
            <!-- Cafetería -->
            <VBox fx:id="cafeteria" alignment="CENTER" maxWidth="200.0" minWidth="150.0" HBox.hgrow="SOMETIMES">
                <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Cafetería" />
                <Rectangle fx:id="cafeteriaHitbox" fill="TRANSPARENT" height="140.0" layoutX="5.0" layoutY="30.0" stroke="RED" strokeType="INSIDE" strokeWidth="2.0" width="140.0" />
            </VBox>
        </HBox>
    </VBox>
    
    <!-- Personaje -->
    <Circle fx:id="personaje" fill="#e53935" radius="15.0" stroke="#b71c1c" strokeType="INSIDE" strokeWidth="2.0" />
    
    <!-- Mensajes de interacción -->
    <Label fx:id="mensaje" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
</AnchorPane>
